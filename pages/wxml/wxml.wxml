<!-- wxml导入方式 -->

<!-- 1 import引入模板  绝对路径和相对路径都可以  不支持递归导入-->
<import src="/pages/template/template.wxml"/>
<!-- include 将公共wxml组件抽取到一个文件中 可以递归导入  但不支持template wxs -->
<template is="tmp" data="{{btnContent:'提交',textContent:'你好'}}"></template>
<template is="tmp" data="{{btnContent:'警告',textContent:'哈哈'}}"></template>
<template is="tmp" data="{{btnContent:'点击',textContent:'呵呵'}}"></template>
